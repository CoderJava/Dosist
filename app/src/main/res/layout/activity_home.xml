<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.ysn.dosist.views.ui.dashboard.DashboardActivity">

    <include
        android:id="@+id/toolbar_activity_home"
        layout="@layout/toolbar_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_activity_home">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_pager_activity_home"
            android:layout_above="@+id/linear_layout_container_bottom_menu_bar_activity_home" />

        <LinearLayout
            android:id="@+id/linear_layout_container_bottom_menu_bar_activity_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_divider_menu_home_active_activity_home"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/tab_menu_active" />

                <ImageView
                    android:id="@+id/image_view_home_active_activity_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view_divider_menu_home_active_activity_home"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/image_view_menu_home_active"
                    android:src="@drawable/ic_home_active_24dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/image_view_home_inactive_activity_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view_divider_menu_home_active_activity_home"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/image_view_menu_home_inactive"
                    android:src="@drawable/ic_home_inactive_24dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_divider_menu_history_active_activity_home"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/tab_menu_active"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/image_view_history_active_activity_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view_divider_menu_history_active_activity_home"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/image_view_menu_history_active"
                    android:src="@drawable/ic_history_transaction_active_24dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_view_history_inactive_activity_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view_divider_menu_history_active_activity_home"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/image_view_menu_history_inactive"
                    android:src="@drawable/ic_history_transaction_inactive_24dp"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_action_button_add_transaction_activity_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:src="@drawable/ic_add_white_24dp"
            app:fabSize="normal" />

    </RelativeLayout>

</RelativeLayout>
